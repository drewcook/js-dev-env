{
	"root": true,
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module",
		"ecmaFeatures": {
			"impliedStrict": true,
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"node": true,
		"mocha": true,
		"jest": true
	},
	"plugins": [
		"import"
	],
	"extends": "eslint:recommended",
	"rules": {
		"no-console": ["warn"],
		"curly": ["error", "all"],
		"default-case": ["error"],
		"eqeqeq": ["error"],
		"no-eval": ["error"],
		"vars-on-top": ["warn"],
		"block-spacing": ["error"],
		"comma-dangle": ["error", "always"],
		"comma-spacing": ["error"],
		"eol-last": ["error"],
		"jsx-quotes": ["error"],
		"key-spacing": ["error"],
		"no-trailing-spaces": ["error"],
		"semi": ["error"],
		"sort-imports": ["warn"],
		"sort-keys": ["warn"],
		"sort-vars": ["warn"],
		"spaced-comment": ["error"],
		"no-duplicate-imports": ["error"],
		"no-useless-constructor": ["warn"],
		"no-var": ["error"],
		"prefer-arrow-callback": ["warn"],
		"prefer-spread": ["error"]
	}
}
